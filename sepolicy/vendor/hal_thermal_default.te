# Allow hal_thermal_default to read/write to sysfs_thermal
allow hal_thermal_default sysfs_thermal:dir { open getattr read search };
allow hal_thermal_default sysfs_thermal:file { getattr open read lock append write };
allow hal_thermal_default sysfs_thermal:lnk_file { getattr open read lock };

# This is required to access proc stat for fetching CPU usage
allow hal_thermal_default proc_stat:file { getattr open read lock };

# netlink access
allow hal_thermal_default self:netlink_kobject_uevent_socket create_socket_perms_no_ioctl;

# Allow Thermal hal to communicate with with power HAL
hal_client_domain(hal_thermal_default, hal_power)

# read thermal_config
get_prop(hal_thermal_default, vendor_thermal_prop)
